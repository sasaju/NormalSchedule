        </receiver>
        <receiver
            android:name=".ui.app_wdiget_twoday.TwoDayWidgetReceiver"
            android:enabled="@bool/glance_appwidget_available"
            android:exported="false"
            android:label="两日课程">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.fly.courseNotice" />
                <action android:name="com.fly.setThisDayCourseNotice" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_twoday_info" />
        </receiver>
